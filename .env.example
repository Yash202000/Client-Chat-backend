# AgentConnect Backend Environment Variables
# Copy this file to .env and fill in your values

# Security
SECRET_KEY=your-secret-key-here

# API Keys
GROQ_API_KEY=your-groq-api-key
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key
NVIDIA_API_KEY=your-nvidia-api-key

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/agentconnect
# DATABASE_URL=sqlite:///./app/data/agentconnect.db

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Social Media Integrations
WHATSAPP_VERIFY_TOKEN=your-verify-token
INSTAGRAM_VERIFY_TOKEN=your-verify-token

LINKEDIN_COMPANY_ID=your-company-id
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/google/callback

# Local AI TTS (optional)
LOCALAI_TTS_URL=http://localhost:8082/tts

# ChromaDB
CHROMA_DB_HOST=localhost
CHROMA_DB_PORT=8001

# MinIO Storage
MINIO_ENDPOINT=localhost:9000
MINIO_SECURE=false
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=agentconnect
MINIO_STRICT=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:8080,http://localhost:5173

# WebSocket Configuration
WS_PING_INTERVAL=30
WS_CLEANUP_INTERVAL=60
WS_REGULAR_SESSION_TIMEOUT=1800
WS_PREVIEW_SESSION_TIMEOUT=300
WS_ENABLE_HEARTBEAT=True

# LLM Streaming Configuration
LLM_STREAMING_ENABLED=True
LLM_STREAM_TOKEN_BUFFER=1
LLM_REQUEST_TIMEOUT=120
HTTP_REQUEST_TIMEOUT=30

# Workflow Configuration
MAX_SUBWORKFLOW_DEPTH=5

################ LiveKit AI Agents Configuration ################
# Deepgram Configuration (for STT) - REQUIRED for voice agents
DEEPGRAM_API_KEY=your-deepgram-api-key

# Agent Default Settings (optional)
AGENT_LLM_PROVIDER=openai
AGENT_LLM_MODEL=gpt-4o-mini
AGENT_STT_PROVIDER=openai
AGENT_STT_LANGUAGE=en
AGENT_TTS_PROVIDER=openai
AGENT_TTS_VOICE=alloy
AGENT_VAD_ENABLED=true
AGENT_ALLOW_INTERRUPTIONS=true
AGENT_GREETING="Hello! I'm your AI voice assistant. How can I help you today?"
AGENT_SYSTEM_PROMPT="You are a helpful and friendly voice assistant. Keep your responses concise and natural for voice conversation."

# Silero VAD Configuration (optional - these match LiveKit defaults)
# VAD_THRESHOLD=0.5              # Speech probability threshold (0-1)
# VAD_MIN_SPEECH_MS=50           # Minimum speech duration to trigger (ms) - LiveKit: 0.05s
# VAD_MIN_SILENCE_MS=550         # Silence duration to end speech (ms) - LiveKit: 0.55s

# OpenAI Realtime API Configuration (for ultra-low latency voice ~300ms)
# Enable this for agents using OpenAI as LLM provider
OPENAI_REALTIME_ENABLED=true
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
OPENAI_REALTIME_VOICE=alloy     # alloy, echo, shimmer, ash, ballad, coral, sage, verse
################################################################

# Twilio/FreeSWITCH Public Host (for webhooks)
# PUBLIC_HOST=https://your-ngrok-url.ngrok-free.app
